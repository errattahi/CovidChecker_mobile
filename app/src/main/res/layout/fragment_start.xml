<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical"
    tools:context=".fragments.StartFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:elevation="15dp"
                android:outlineAmbientShadowColor="@color/black"
                app:srcCompat="@mipmap/logo2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="20dp"
                android:text="Welcome to COVID-AI, and thank you for your contribution."
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:padding="20dp"
                android:text="Tap the button below to start the survey"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/start_survey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="START SURVEY"
                android:textSize="18dp"
                app:iconSize="30dp"
                android:layout_margin="25dp"
                android:layout_marginLeft="10dp"
                app:icon="@drawable/baseline_arrow_forward_ios_24"
                app:iconGravity="end"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>