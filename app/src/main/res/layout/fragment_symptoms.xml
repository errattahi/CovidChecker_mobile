<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical"
    tools:context=".fragments.SymptomsFragment">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:max="100"
        android:progress="100"
        android:progressTint="@color/purple_700" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="About your symptoms"
                android:textColor="@color/purple_700"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/symptoms" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do you have any of the following symptom? (you can choose more than one)"
                android:textColor="@color/purple_700"
                android:textSize="15dp" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <CheckBox
                        android:id="@+id/symptom1"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="None"
                        android:buttonTint="@color/purple_500"/>

                    <CheckBox
                        android:id="@+id/symptom2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Fever (feeling feverish or warmer than usual)"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom3"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Chills"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom4"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Dry cough"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom5"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Wet cough"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom6"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Difficulty breathing or feeling short of breath"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom7"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Tightness in your chest"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom8"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="Loss of taste and smell"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom9"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Dizziness, confusion or vertigo"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom10"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Headache"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom11"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Muscle aches"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom12"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Sore throat"
                        android:buttonTint="@color/purple_500" />

                    <CheckBox
                        android:id="@+id/symptom13"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Runny or blocked nose"
                        android:buttonTint="@color/purple_500" />

                </LinearLayout>
            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/previous2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="PREVIOUS"
                    android:textSize="18dp"
                    app:icon="@drawable/baseline_arrow_back_ios_24"
                    app:iconGravity="start"
                    app:iconSize="30dp"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/finish"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="FINISH"
                    android:textSize="20dp"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
